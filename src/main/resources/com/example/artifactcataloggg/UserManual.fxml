<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.artifactcataloggg.controller.UserManualController"
      spacing="10" alignment="TOP_CENTER"
      prefWidth="400" prefHeight="300"
      fillWidth="true">

    <Label text="User Manual" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextArea fx:id="manualTextArea"
              editable="false"
              wrapText="true"
              VBox.vgrow="ALWAYS"
              prefWidth="Infinity" />
</VBox>
