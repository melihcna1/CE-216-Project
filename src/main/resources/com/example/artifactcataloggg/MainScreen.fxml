<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.artifactcataloggg.controller.MainScreenController">
    <top>
        <VBox spacing="10" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <MenuBar>
                <menus>
                    <Menu text="File">
                        <items>
                            <MenuItem text="Import JSON" />
                            <MenuItem text="Export JSON" />
                        </items>
                    </Menu>
                    <Menu text="Edit">
                        <items>
                            <MenuItem text="Add" />
                            <MenuItem text="Edit" />
                            <MenuItem text="Delete" />
                        </items>
                    </Menu>
                    <Menu text="Help">
                        <items>
                            <MenuItem text="About" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <HBox spacing="10">
                <TextField fx:id="searchField" HBox.hgrow="ALWAYS" promptText="Search..." />
                <Button fx:id="searchButton" text="Search" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" BorderPane.alignment="CENTER">
            <content>
                <GridPane fx:id="artifactGrid" hgap="10" vgap="10" />
            </content>
        </ScrollPane>
    </center>

    <right>
        <VBox BorderPane.alignment="CENTER" spacing="5" prefWidth="150" VBox.vgrow="ALWAYS">
            <Label text="Tags:" />
            <ListView VBox.vgrow="ALWAYS" />
        </VBox>
    </right>
</BorderPane>

