<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.artifactcataloggg.controller.MainScreenController" >
    <top>
        <VBox prefHeight="54.0" prefWidth="518.0" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <MenuBar>
                <menus>
                    <Menu text="File">
                        <items>
                            <MenuItem text="Import JSON"  onAction="#handleImportJson"/>
                            <MenuItem text="Export JSON" onAction="#exportToJson" />
                        </items>
                    </Menu>
                    <Menu text="Edit">
                        <items>
                            <MenuItem text="Add" onAction="#handleAddMenu" />
                            <MenuItem text="Edit" onAction="#handleEditMenu" />
                            <MenuItem text="Delete" onAction="#deleteArtifact" />
                        </items>
                    </Menu>
                    <Menu text="Help">
                        <items>
                            <MenuItem text="About" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <HBox spacing="10">
                <TextField fx:id="searchField" HBox.hgrow="ALWAYS" promptText="Search..." />
                <Button fx:id="searchButton" text="Search" />
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <content>
                <GridPane fx:id="artifactGrid" hgap="10" prefHeight="100.0" prefWidth="100.0" vgap="10" />
            </content>
        </ScrollPane>
    </center>
    <right>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Tags:" />
                <ListView fx:id="tagListView" prefHeight="100.0" />
                <Label text="Artifacts:" />
                <ListView fx:id="artifactListView" prefHeight="268.0" prefWidth="100.0" />
            </children>
        </VBox>
    </right>
</BorderPane>

